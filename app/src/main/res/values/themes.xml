<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Barus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_soft</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorSecondaryVariant">@color/yellow_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- CUSTOM CHIP -->
    <style name="my.theme.chip.choice" parent="Widget.MaterialComponents.Chip.Action">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <!-- Chip text color selector -->
        <item name="android:textColor">@color/chip_text_color</item>
        <!-- Chip icon color selector -->
        <item name="checkedIconTint">@color/gray_soft</item>
    </style>

    <!-- CUSTOM TEXT INPUT -->
    <style name="MyCustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/yellow_dark</item>
        <item name="helperTextTextColor">@color/black</item>
        <item name="placeholderTextColor">@color/gray_soft</item>
    </style>

    <style name="MyCustomTextInput" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>